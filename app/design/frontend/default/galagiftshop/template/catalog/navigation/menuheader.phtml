<?php
/**
 * Top menu for store
 *
 * @see Mage_Page_Block_Html_Topmenu
 */
?>
<?php if(Mage::helper("galagiftshopsettings/mainmenu")->gettype() != 'default_hor' && Mage::helper("galagiftshopsettings/mainmenu")->gettype() != 'default_ver'): ?>
	<?php 
		$idmenu =  Mage::helper("galagiftshopsettings")->getGeneral_MainMenu();
		$model  = Mage::getModel('megamenupro/megamenupro')->load($idmenu)->getData();	 
	?>
	<?php if($model['type'] == 1):?>
		<?php echo Mage::helper("galagiftshopsettings/mainmenu")->getmenu(); ?>
	<?php endif;?>
<?php elseif(Mage::helper("galagiftshopsettings/mainmenu")->gettype() == 'default_ver') : ?>
	<?php $_menu = $this->renderCategoriesMenuHtml(0,'menu-item-link menu-item-depth-0') ?>
	<?php if($_menu): ?>    
		<div class="block em_nav">
			<div class="block-title" id="menu_title"><strong><span><?php echo $this->__('Category') ?></span></strong></div>
			<div>
				<ul class="vnav" id="menuleft">
					<li class="menu-item-depth-0">
						<ul class="em-catalog-navigation">
							<?php echo $_menu ?>
						</ul>
					</li>
				</ul>
			</div>
		</div>
	<?php endif ?>
<?php endif ?>