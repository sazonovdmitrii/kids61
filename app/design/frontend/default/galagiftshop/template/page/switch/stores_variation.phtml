<?php 
/**
 * Store switcher template
 *
 * @see Mage_Core_Block_Store_Switcher
 */
?>
<?php	
	$setting = Mage::helper('galagiftshopsettings');
	$check = $setting->getGeneral_DisableFrontendVariation();
    $maxItem = 3;
 ?>
<?php if($check != 1) : ?>
	<?php if(count($this->getGroups())>1): ?>
	<div class="store_switcher_variation hide-lte0">
		<a href="javascript:void(0)" class="btn_storeview"><?php echo $this->__("Store view") ?></a>
		<div class="storediv">
			<a href="javascript:void(0)" class="btn_storeclose"><?php echo $this->__("Close") ?></a>
			<div class="store_content">
				<div id="slider_storeview" class="slider_container" style="width: 920px; height:400px;">
					<ul class="slider-store" id="slider_store" style="height: 380px !important;">
					<?php foreach ($this->getGroups() as $_group): ?>
						<?php 
							$name	=	strtolower($this->escapeHtml($_group->getName()));
							$name	=	str_replace(" ","_",trim($name));
						?>
						<li style="width:306px; height:380px;" class="item slider itemslider">
							<a href="<?php echo $_group->getHomeUrl()  ?>" title="<?php echo $this->escapeHtml($_group->getName()) ?>">
								<img width="306" height="380" src="<?php echo $this->getSkinUrl('images/storeview/'.$name.'.jpg'); ?>" alt="<?php echo $this->escapeHtml($_group->getName()) ?>" />
							</a>
						</li>
					<?php endforeach; ?>
					</ul>
                    <?php if(count($this->getGroups())>=3):?>
            			<div class="clearfix"></div>
            			<a title="<?php echo $this->__('Previous');?>" id="prev_store" class="prev" href="#"><?php echo $this->__('Previous');?></a>
            			<a title="<?php echo $this->__('Next');?>" id="next_store" class="next" href="#"><?php echo $this->__('Next');?></a>
            		<?php endif;?>	
				</div>
			</div>
		</div>   
	</div>
	<?php endif; ?>
<?php endif; ?>
<style>
.slider-store{height:400px!important}
</style>