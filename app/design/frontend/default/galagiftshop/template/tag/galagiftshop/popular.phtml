<script type="text/javascript">
    jQuery(window).bind('emadaptchange orientationchange',function(){
		if(jQuery('.em-col-left').length){
			var flashtags_left = jQuery('.em-col-left #flashtags_popular');
			var setWidth = flashtags_left.parents().find('.em-col-left').width();
			var ar = flashtags_left.width()/flashtags_left.height();         
			flashtags_left.attr('width', setWidth);
			flashtags_left.attr('height', flashtags_left.width()/ar);
		}
		if(jQuery('.em-col-right').length){
			var flashtags_right = jQuery('.em-col-right #flashtags_popular');
			var setWidth = flashtags_right.parents().find('.em-col-right').width();
			var ar = flashtags_right.width()/flashtags_right.height();         
			flashtags_right.attr('width', setWidth);
			flashtags_right.attr('height', flashtags_right.width()/ar);
		}
    });
</script>