<script type="text/javascript">
jQuery(function($) {	
	var fontLoaded = {};
	$('#galagiftshop_typography_google_fonts').after('<p id="galagiftshop_typography_google_fonts_preview" style="font-size:20px;padding:10px 0"></p>')
		.bind('change', function() {
			var font = $(this).val();
			if (font.length > 0) {
				font = font[font.length-1];
				if (typeof fontLoaded[font] == 'undefined') {
					$('head').append('<link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family='+encodeURIComponent(font)+':400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,cyrillic-ext,cyrillic,greek-ext,greek,vietnamese,latin-ext"></link>');
					$('#galagiftshop_typography_google_fonts_preview').html(font)
						.css('font-family', font);
				}
			}
		});
		
		
	// stripes pattern
	$('a.galagiftshop_header_head_bg_image').click(function() {
		$('a.galagiftshop_header_head_bg_image').removeClass('selected');
		$(this).addClass('selected');
		$('#galagiftshop_header_head_bg_image').val($(this).data('input-value'));
		return false;
	});
	
	// stripes pattern
	$('a.galagiftshop_body_bd_bg_image').click(function() {
		$('a.galagiftshop_body_bd_bg_image').removeClass('selected');
		$(this).addClass('selected');
		$('#galagiftshop_body_bd_bg_image').val($(this).data('input-value'));
		return false;
	});
	
	// stripes pattern
	$('a.galagiftshop_footer_foot_bg_image').click(function() {
		$('a.galagiftshop_footer_foot_bg_image').removeClass('selected');
		$(this).addClass('selected');
		$('#galagiftshop_footer_foot_bg_image').val($(this).data('input-value'));
		return false;
	});
    
    // stripes pattern
	$('a.galagiftshop_general_page_bg_image').click(function() {
		$('a.galagiftshop_general_page_bg_image').removeClass('selected');
		$(this).addClass('selected');
		$('#galagiftshop_general_page_bg_image').val($(this).data('input-value'));
		return false;
	});
	
	$(document).ready(function(){
        var b = $('#galagiftshop_general_box_wide').val();
        if(b=='wide'){
            $('#row_galagiftshop_general_page_bg_color').hide();
            $('#row_galagiftshop_general_page_bg_image').hide();
            $('#row_galagiftshop_general_page_bg_file').hide();
            $('#row_galagiftshop_general_page_bg_position').hide();
            $('#row_galagiftshop_general_page_bg_repeat').hide();
        }else{
            $('#row_galagiftshop_general_page_bg_color').show();
            $('#row_galagiftshop_general_page_bg_image').show();
            $('#row_galagiftshop_general_page_bg_file').show();
            $('#row_galagiftshop_general_page_bg_position').show();
            $('#row_galagiftshop_general_page_bg_repeat').show();
        }
        
    });
    
    // box/wide
    $('#galagiftshop_general_box_wide').change(function(){
       var a = $('#galagiftshop_general_box_wide').val();
       if(a == 'box'){
            $('#row_galagiftshop_general_page_bg_color').show();
            $('#row_galagiftshop_general_page_bg_image').show();
            $('#row_galagiftshop_general_page_bg_file').show();
            $('#row_galagiftshop_general_page_bg_position').show();
            $('#row_galagiftshop_general_page_bg_repeat').show();
       }else{
            $('#row_galagiftshop_general_page_bg_color').hide();
            $('#row_galagiftshop_general_page_bg_image').hide();
            $('#row_galagiftshop_general_page_bg_file').hide();
            $('#row_galagiftshop_general_page_bg_position').hide();
            $('#row_galagiftshop_general_page_bg_repeat').hide();
       }
    });
    
	$('head').append('<link rel="stylesheet" type="text/css" href="<?php echo Mage::getBaseUrl('js') ?>em/colorjoe.css" />');
	
	
	// color picker
	(function() {
		var focus;

		var el = document.createElement('div');
		el.id = 'hslPicker';
		$('body').append(el);

		var cj = colorjoe.hsl(el, '#ffffff', [
			// 'close',
			'alpha',
			'currentColor',
			['fields', {space: 'HSLA', limit: 100, fix:2}],
			['fields', {space: 'CMYKA', limit: 100, fix:2}],
			'hex'
		]).on('change', function(c) {
			if (focus) {
				$(focus).val(c.hex())
					.css('background-color', c.hex());
			}
			
		}).update().hide();
	
		var tm;
		$('.colorjoe').focus(function() {
			clearTimeout(tm);
			focus = this;
			$(el).css({position:'absolute', left:$(this).offset().left+'px', top:$(this).offset().top+$(this).outerHeight()+'px'});
			if ($(this).val()) cj.set($(this).val());
			cj.show();
		}).blur(function() {
			tm = setTimeout(function() {
				cj.hide();
			}, 200);
		}).change(function() {
			$(this).css('background-color', $(this).val());
		}).each(function() {
			$(this).css('background-color', $(this).val());
		});
	})();
});
</script>