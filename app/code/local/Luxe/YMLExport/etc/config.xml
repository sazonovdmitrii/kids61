<config>
    <modules>
        <Luxe_YMLExport>
            <version>0.1.5</version>
        </Luxe_YMLExport>
    </modules>
     <global>
        <models>
            <ymlexport>
                <class>Luxe_YMLExport_Model</class>
            </ymlexport>
        </models>
        <resources>
            <ymlexport_setup>
                <setup>
                    <module>Luxe_YMLExport</module>
                    <class>Luxe_YMLExport_Model_Mysql4_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </ymlexport_setup>
            <catalog_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </catalog_write>
            <catalog_read>
                <connection>
                    <use>core_read</use>
                    </connection>
            </catalog_read>
        </resources>
        <helpers>
            <ymlexport>
                <class>Luxe_YMLExport_Helper</class>
            </ymlexport>
        </helpers>
    </global>
    <frontend>
        <routers>
            <ymlexport>
                <use>standard</use>
                <args>
                    <module>Luxe_YMLExport</module>
                    <frontName>ymlexport</frontName>
                </args>
            </ymlexport>
        </routers>
        <default>
            <router>ymlexport</router>
        </default>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <ymlexport>
                                            <title>YML Export</title>
                                        </ymlexport>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
