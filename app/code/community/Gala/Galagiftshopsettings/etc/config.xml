                <head_bg_repeat></head_bg_repeat>
             </header>
             <menu>
                <tm_bg_color></tm_bg_color>
                <tm_text_color></tm_text_color>
                <tm_hover_text_color></tm_hover_text_color>
                <tm_font></tm_font>
                <dm_bg_color></dm_bg_color>
                <dm_hover_bg_color></dm_hover_bg_color>
                <dm_text_color></dm_text_color>
                <dm_text2_color></dm_text2_color>
                <dm_text3_color></dm_text3_color>
                <dm_hover_text_color></dm_hover_text_color>
                <dm_font></dm_font>
            </menu>
